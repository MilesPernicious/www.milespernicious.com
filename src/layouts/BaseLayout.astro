import "@styles/fonts.scss";
import "@styles/stylify.css";

import Metadata from "@components/misc/Metadata.astro";

import Masthead from '@components/sections/Masthead.astro';
import Footer from "@components/sections/Footer.astro";

const { title, description, noindex } = Astro.props;

---

<!DOCTYPE html>
<html lang="en" class="color-scheme:$theme overflow-y:hidden">
	<head>
		<Metadata {title} {description} {noindex} />
	</head>
	<body id="body"
	      class="font-text display:grid grid-template-columns:1fr grid-template-rows:100px_1fr_60px gap:0">
		<div id="backdrop" class="grid-area:1/1/4/2"><slot name="backdrop" /></div>
		<header id="masthead" class="grid-area:1/1/2/2">
			<Masthead />
		</header>
		<main id="content" class="grid-area:2/1/3/2 overflow-y:scroll">
			<slot />
		</main>
		<footer id="footer" class="grid-area:3/1/4/2"><Footer /></footer>
	</body>
</html>
