import Layout from '@layouts/PageLayout.astro';
import DateFormat from '@components/DateFormat.astro';

const { title, description, subtitle, date, dateUpdated } = Astro.props;
const showUpdated = !!dateUpdated;

---

<Layout {title} {description}>
	<article class="container">
		<h1>{title}</h1>
		<h2 class="h3 font-weight:normal">{subtitle}</h2>
		<p class:list={['font-size:$font-size-0', 'date', { published: !showUpdated, updated: showUpdated }]}>
			{showUpdated ? "Updated on " : "Published on "}
			<DateFormat date={showUpdated ? dateUpdated : date} />
		</p>
		<div class="margin-top:2rem [p,h2]{margin-bottom:2rem}">
		<slot />
		</div>
	</article>
</Layout>
