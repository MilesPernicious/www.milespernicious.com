import Layout from '@layouts/PageLayout.astro';
import DateTime from '@components/DateTimeHTML.astro';

const { title, description, subtitle, date, dateUpdated } = Astro.props;
const showUpdated = !!dateUpdated;

---

<Layout {title} {description}>
	<article class="container">
		<h1>{title}</h1>
		<h2 class="h3 font-weight:normal">{subtitle}</h2>
		<p class="font-size:$font-size-0">
			{showUpdated ? "Updated on " : "Published on "}
			<DateTime date={showUpdated ? dateUpdated : date}
			          month="long" day="numeric" year="numeric" />
		</p>
		<div class="margin-top:2rem [p,h2]{margin-bottom:2rem}">
		<slot />
		</div>
	</article>
</Layout>
