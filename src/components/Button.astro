const { href = null, variant, ...attrs } = Astro.props;

const ButtonTag = (href === null ? 'button' : 'a');
const type = attrs['type'] || (ButtonTag === 'button' ? 'button' : null);
const inlineStyles = attrs['class'] || '';

---

<ButtonTag {type} {href} {...attrs}
	class={`display:inline-block outline:none
	        cursor:pointer border-width:1px border-style:solid
			border-color:transparent border-radius:$radius
			font-size:$font-size-3
			color:$white background-color:$brand
			light:hover:background-color:$text
			dark:hover:background-color:$surface
			transition:background-color_0.3s_ease-in-out_0s
			text-decoration:none paddingX:2rem paddingY:.5rem
			${inlineStyles}
	      `}>
	<slot />
</ButtonTag>
