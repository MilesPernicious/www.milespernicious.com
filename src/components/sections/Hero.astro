import SocialIconLink from "@components/SocialIconLink.astro";

interface Props {
	mainText: string,
	mainTextGradient: string,
	subText: string
}

const { mainText, mainTextGradient, subText } = Astro.props;
---

<section class="height:100% display:grid grid-template:1fr/1fr gap:0">
	<div class="display:grid grid-area:1/1/2/2 align-items:center font-size:1.25rem md:font-size:1.5rem">
		<div class="container">
			<h1 class="margin-bottom:0 font-weight:bold color:$brand">{mainText}
				<span class="padding-left:0.17ch font-script font-variant-caps:small-caps
				             background:$gradient-lei background-clip:text
							 webkit-text-fill-color:transparent"
				>{mainTextGradient}</span>
			</h1>
			<p class="color:$brand font-weight:bold">{subText}</p>
			<div class="display:flex justify-content:center">
				<SocialIconLink href="https://twitch.tv/MilesPernicious" name="Twitch" />
				<SocialIconLink href="https://discord.gg/aloha" name="Discord" />
				<SocialIconLink href="https://mastodon.world/@MilesPernicious" name="Mastodon" />
				<SocialIconLink href="https://youtube.com/MilesPernicious" name="YouTube" />
				<SocialIconLink href="https://github.com/MilesPernicious" name="GitHub" />
			</div>
		</div>
	</div>
</section>
